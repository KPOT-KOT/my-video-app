<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { font-family: sans-serif; background: #1a1a1a; color: #eee; padding: 20px; margin: 0; }
        .header { margin-bottom: 20px; border-bottom: 1px solid #444; padding-bottom: 10px; }
        .item { 
            display: flex; align-items: center; padding: 15px; 
            background: #2a2a2a; margin-bottom: 8px; border-radius: 8px;
            text-decoration: none; color: #fff; border: 1px solid #333;
        }
        .item:active { background: #3a3a3a; }
        .icon { font-size: 24px; margin-right: 15px; }
        .back-link { display: inline-block; color: #3498db; margin-bottom: 20px; text-decoration: none; }
        .path-display { font-size: 0.8em; color: #888; word-break: break-all; }
    </style>
</head>
<body>
    <div class="header">
        <h2>Movie Browser</h2>
        <div class="path-display"><%= currentDirName %></div>
    </div>

    <% if (parentDir) { %>
        <a href="/?dir=<%= parentDir %>" class="back-link">‚¨Ö Back</a>
    <% } else if (currentDirName !== "My Movie Archives") { %>
        <a href="/" class="back-link">‚¨Ö Home (Archives)</a>
    <% } %>

    <div class="list">
        <% items.directories.forEach(dir => { %>
            <a href="/?dir=<%= encodePath(dir.fullPath) %>" class="item">
                <span class="icon">üìÅ</span>
                <span><%= dir.name %></span>
            </a>
        <% }) %>

        <% items.files.forEach(file => { %>
            <a href="/player?path=<%= encodePath(file.fullPath) %>" class="item">
                <span class="icon">üé¨</span>
                <span><%= file.name %></span>
            </a>
        <% }) %>
    </div>
</body>
</html>